<div class="container">
  <div class="row no-gutters">
    <div class="col-md-7 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light p-4 mb-0">記事投稿フォーム</h5>
      <div class="form-body p-4">
        <% if @post_image.errors.any? %>
          <%= @post_image.errors.count %>件のエラーが発生しました
          <% @post_image.errors.full_messages.each do |message| %>
            <%= message %>
          <% end %>
        <% end %>
        <%= form_with model: @post_image, local:true do |f| %>
        <h4>投稿画像</h4>
        <%= f.attachment_field :image, class: "w-100" %>
        　<h4>タイトル</h4>
          <div class="input-group mb-3 mt-2">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-building"></i></span>
            </div>
            <%= f.text_field :title, class:"form-control", placeholder:"見出し" %>
          </div>
          <h4>タグ</h4>
          <%= f.text_field :tag_list, value: @post_image.tag_list.join(','), class: "form-control",placeholder:"タグが複数ある場合は,で区切ってください" %>
          <hr>
          <h4>記事内容</h4>
          <%= f.text_area :body, class:"form-control", rows:"3", placeholder:"記事内容" %>
          <hr>
          <%= f.submit '投稿', class:"btn btn-lg btn-block btn-info mt-4" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

