<h1>記事投稿フォーム</h1>
<%= form_with model: @post_image, local:true do |f| %>
  <h4>画像</h4>
  <%= f.attachment_field :image %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>
  <h4>内容</h4>
  <%= f.text_area :body %>
  <h4>タグ</h4>
  <%= f.text_field :tag_list, value: @post_image.tag_list.join(','), class: "form-control" %>
  <%= f.submit '投稿' %>
<% end %>