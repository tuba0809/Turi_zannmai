<table class="table table-hover table-inverse">
　<% if @range == '2' %>
<h2><%= [@word] %>で記事検索</h2>
  <thead>
    <tr>
     <th></th>
     <th>Title</th>
     <th>Opinion</th>
     <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>
     <% @post_image.each do |post_image| %>
     <tr>
      <td>
       <%= link_to(post_image.user) do %>
       <%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg") %>
       <% end %>
      </td>
      <td>
       <%= link_to post_image.title, post_image, class: "post_image_#{post_image.id}" %>
      </td>
      <td><%= post_image.body %></td>
     </tr>
     <% end %>
  </tbody>

  <% else %>
  <h2>Users search for<%= [@word] %></h2>
  <thead>
     <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
     </tr>
   </thead>

   <tbody>
    <% @user.each do |user| %>
     <tr>
      <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg") %></td>
      <td><%= user.nickname%></td>
      <td><%= link_to "Show", user, class: "user_#{user.id}" %></td>
     </tr>
    <% end %>
   </tbody>
   <% end %>
 </table>